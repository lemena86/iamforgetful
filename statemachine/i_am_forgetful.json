{
  "Comment": "I am forgetful - using native SNS SMS and Lambda for email.",
  "StartAt": "Timer",
  "States": {
    "Timer": {
      "Type": "Wait",
      "SecondsPath": "$.waitSeconds",
      "Next": "ChoiceState"
    },
    "ChoiceState": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.preference",
          "StringEquals": "email",
          "Next": "Email"
        },
        {
          "Variable": "$.preference",
          "StringEquals": "sms",
          "Next": "SMS"
        }
      ],
      "Default": "NoChoice"
    },
    "Email": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:401482025569:function:fn_email_reminder",
        "Payload": {
          "Input.$": "$"
        }
      },
      "Next": "NextState"
    },
    "SMS": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Parameters": {
        "Message": {
          "Input.$": "$.message"
        },
        "PhoneNumber.$": "$.phone"
      },
      "Next": "NextState"
    },
    "NoChoice": {
      "Type": "Fail",
      "Error": "DefaultStateError",
      "Cause": "No Choice Made!"
    },
    "NextState": {
      "Type": "Pass",
      "End": true
    }
  }
}
